<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    android:orientation="vertical"
    tools:context="com.example.aleem.calculator.MainActivity">

    <EditText
        android:id="@+id/result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@android:color/background_dark"
        android:cursorVisible="true"
        android:ems="10"
        android:gravity="right"
        android:inputType="number"
        android:paddingTop="15dp"
        android:textColor="@android:color/background_light"
        android:textSize="45sp"
        tools:text="0" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow
            android:layout_marginBottom="1pt"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btnAC"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="@color/gray"
                android:onClick="btnClean"
                android:text="AC"
                android:textSize="22sp" />

            <Button
                android:id="@+id/btnCut"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="@color/gray"
                android:onClick="btnCut"
                android:text="C"
                android:textSize="22sp" />

            <Button
                android:id="@+id/btnpm"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="@color/gray"
                android:onClick="btnClicked"
                android:text="+/-"
                android:textSize="22sp" />

            <Button
                android:id="@+id/btndiv"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:background="@color/orange"
                android:onClick="btnOpt"
                android:text="รท"
                android:textColor="@color/bb"
                android:textSize="22sp" />
        </TableRow>

        <TableRow
            android:layout_marginBottom="1pt"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:layout_marginRight="1pt"
                android:id="@+id/btn7"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:background="@color/gray"
                android:onClick="btnClicked"
                android:text="7"
                android:textSize="22sp" />

            <Button
                android:layout_marginRight="1pt"
                android:id="@+id/btn8"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:background="@color/gray"
                android:onClick="btnClicked"
                android:text="8"
                android:textSize="22sp" />

            <Button
                android:layout_marginRight="1pt"
                android:id="@+id/btn9"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:background="@color/gray"
                android:onClick="btnClicked"
                android:text="9"
                android:textSize="22sp" />

            <Button
                android:id="@+id/btnmul"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:background="@color/orange"
                android:onClick="btnOpt"
                android:text="X"
                android:textColor="@color/bb"
                android:textSize="22sp" />
        </TableRow>

        <TableRow
            android:layout_marginBottom="1pt"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:layout_marginRight="1pt"
                android:id="@+id/btn4"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:background="@color/gray"
                android:onClick="btnClicked"
                android:text="4"
                android:textSize="22sp" />

            <Button
                android:layout_marginRight="1pt"
                android:id="@+id/btn5"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:background="@color/gray"
                android:onClick="btnClicked"
                android:text="5"
                android:textSize="22sp" />

            <Button
                android:layout_marginRight="1pt"
                android:id="@+id/btn6"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:background="@color/gray"
                android:onClick="btnClicked"
                android:text="6"
                android:textSize="22sp" />

            <Button
                android:id="@+id/btnminus"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:background="@color/orange"
                android:onClick="btnOpt"
                android:text="_"
                android:textColor="@color/bb"
                android:textSize="22sp" />
        </TableRow>

        <TableRow
            android:layout_marginBottom="1pt"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:layout_marginRight="1pt"
                android:id="@+id/btn1"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:background="@color/gray"
                android:onClick="btnClicked"
                android:text="1"
                android:textSize="22sp" />

            <Button
                android:layout_marginRight="1pt"
                android:id="@+id/btn2"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:background="@color/gray"
                android:onClick="btnClicked"
                android:text="2"
                android:textSize="22sp" />

            <Button
                android:layout_marginRight="1pt"
                android:id="@+id/btn3"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:background="@color/gray"
                android:onClick="btnClicked"
                android:text="3"
                android:textSize="22sp" />

            <Button
                android:id="@+id/btnplus"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:background="@color/orange"
                android:onClick="btnOpt"
                android:text="+"
                android:textColor="@color/bb"
                android:textSize="22sp" />
        </TableRow>

    </TableLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:layout_marginRight="1pt"
            android:id="@+id/btn0"
            android:layout_width="65pt"
            android:layout_height="30pt"
            android:layout_weight="1"
            android:background="@color/gray"
            android:onClick="btnClicked"
            android:text="0"
            android:textSize="22sp" />

        <Button
            android:id="@+id/btndot"
            android:layout_width="30pt"
            android:layout_height="30pt"
            android:layout_marginRight="1pt"
            android:layout_weight="1"
            android:background="@color/gray"
            android:onClick="btnDot"
            android:text="."
            android:textSize="22sp" />

        <Button
            android:id="@+id/btnequal"
            android:layout_width="29pt"
            android:layout_height="30pt"
            android:layout_weight="1"
            android:background="@color/orange"
            android:onClick="btnEqual"
            android:text="="
            android:textColor="@color/bb"
            android:textSize="22sp" />
    </LinearLayout>
</LinearLayout>
